# .env.example - Template for environment variables
# Copy this file to `.env` and replace placeholder values before running.
# These variables are used by docker-compose AND for local development.

# --- Database Configuration ---
POSTGRES_PASSWORD=changeme           # set a strong password
POSTGRES_DB=demo_auth_db
DB_PORT=5432

# --- Redis Configuration ---
REDIS_PORT=6379
REDIS_DB=0

# --- Application Configuration ---
APP_PORT=8000

# --- For Local Development (outside Docker) ---
# Example DB/Redis URLs (used by the app when running locally)
STATEFUL_ABAC_DATABASE_URL=postgresql+asyncpg://postgres:changeme@localhost:5432/demo_auth_db
STATEFUL_ABAC_REDIS_URL=redis://localhost:6379/0

# --- Database Pool Configuration ---
STATEFUL_ABAC_POSTGRES_POOL_SIZE=10
STATEFUL_ABAC_POSTGRES_MAX_OVERFLOW=10
STATEFUL_ABAC_POSTGRES_POOL_RECYCLE=300
STATEFUL_ABAC_POSTGRES_POOL_TIMEOUT=30
STATEFUL_ABAC_POSTGRES_POOL_PRE_PING=True

# --- Security ---
# Replace the JWT secret with a secure secret in production. Do NOT commit real secrets to the repo.
STATEFUL_ABAC_JWT_SECRET_KEY=changeme
STATEFUL_ABAC_JWT_ALGORITHM=HS256

# --- Feature flags / Environment ---
STATEFUL_ABAC_TESTING=False
STATEFUL_ABAC_ENABLE_SCHEDULER=True
STATEFUL_ABAC_ENABLE_UI=True
